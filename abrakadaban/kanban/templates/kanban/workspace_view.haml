.row
  .large-12.columns
    %h1
      Abrakadaban
    %h2
      {& workspace.title &}
    .workflows
      .workflow{:class => "large-{& workspaceWidth &} columns", :ng-repeat => "workflow in workspace.workflow|orderBy:orderProp"}
        .title{:draggable-dest => "", :drag-order => "0", :drag-workflow => "{& workflow &}"}
          {& workflow.title &}
        .idea{:draggable-dest => "", :drag-order => "{& idea.order+1 &}", :drag-workflow => "{& workflow &}", :draggable-idea => "", :draggable => "{& !edit &}", :ng-repeat => "idea in workspace.idea|workflow:workflow.id|orderBy:orderProp|hardenOrder"}
          .panel
            .show{:ng-hide => "edit",:ng-click => "edit=!edit"}
              {& idea.title &}
            .edit{:ng-show => "edit"}
              %input{:ng-model => "idea.title"}
              %a.button.tiny{:ng-click => "edit=!edit;updateIdea(idea);"}
                Update
